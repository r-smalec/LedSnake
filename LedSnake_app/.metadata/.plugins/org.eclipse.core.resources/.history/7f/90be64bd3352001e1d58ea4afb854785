/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"

#include "xparameters.h"
#include "xil_printf.h"

#define AXI_ADDR XPAR_LED_FRAME_SENDER_0_S00_AXI_BASEADDR

uint32_t* led_config;
uint32_t* led0;
uint32_t* led1;
uint32_t* led2;
uint32_t* led3;
uint32_t* led4;
uint32_t* led5;
uint32_t* led6;
uint32_t* led7;

void initAddr(void);

int main()
{
    init_platform();

    initAddr();

    print("Hello World\n\r");
    print("Successfully ran Hello World application");
    xil_printf("%d", *led_config);

    *led0 = 123;
    cleanup_platform();

    return 0;
}

void initAddr() {

	led_config = (void *)(AXI_ADDR);
	led0 = (void *)(AXI_ADDR + 4);
	led1 = (void *)(AXI_ADDR + 8);
	led2 = (void *)(AXI_ADDR + 12);
	led3 = (void *)(AXI_ADDR + 16);
	led4 = (void *)(AXI_ADDR + 20);
	led5 = (void *)(AXI_ADDR + 24);
	led6 = (void *)(AXI_ADDR + 28);
	led7 = (void *)(AXI_ADDR + 32);
}
